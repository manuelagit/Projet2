@model Projet2.Models.Club
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateClub</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <fieldset>

            <legend><h4>Création d'un compte club</h4></legend>
            <table>
                <tbody>
                    <tr>
                        <td>@Html.LabelFor(m => Model.InfosClub.NomClub)</td>
                        <td>@Html.TextBoxFor(m => Model.InfosClub.NomClub, new { placeholder = "nom du club" })</td>
                        <td>@Html.ValidationMessageFor(m => Model.InfosClub.NomClub)</td>
                    </tr>

                    <tr>
                        <td>@Html.LabelFor(m => Model.InfosClub.Adresse)</td>
                        <td>@Html.TextBoxFor(m => Model.InfosClub.Adresse.NumeroRue, new { placeholder = "n°" })</td>
                        <td>@Html.ValidationMessageFor(m => Model.InfosClub.Adresse.NumeroRue)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.TextBoxFor(m => Model.InfosClub.Adresse.NomRue, new { placeholder = "rue" })</td>
                        <td>@Html.ValidationMessageFor(m => Model.InfosClub.Adresse.NomRue)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.TextBoxFor(m => Model.InfosClub.Adresse.CodePostal, new { placeholder = "code postal" })</td>
                        <td>@Html.ValidationMessageFor(m => Model.InfosClub.Adresse.CodePostal)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.TextBoxFor(m => Model.InfosClub.Adresse.NomVille, new { placeholder = "Ville" })</td>
                        <td>@Html.ValidationMessageFor(m => Model.InfosClub.Adresse.NomVille)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => Model.Compte.AdressEmail)</td>
                        <td>@Html.TextBoxFor(m => Model.Compte.AdressEmail, new { type = "email", placeholder = "mail" })</td>
                        <td>@Html.ValidationMessageFor(m => Model.Compte.AdressEmail)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => Model.Compte.MotDePasse)</td>
                        <td>@Html.TextBoxFor(m => Model.Compte.MotDePasse, new { type = "password" })</td>
                        <td>@Html.ValidationMessageFor(m => Model.Compte.MotDePasse)</td>
                    </tr>

                </tbody>
            </table>
            <br />
            <br />

            <input type="button" onclick="window.location.href='https://localhost:5001/Home';" class="btn btn-warning btn-lg" value="Retour accueil" />
            <input type="button" onclick="window.location.href='https://localhost:5001/Home/ClubList';" class="btn btn-warning btn-lg" value="Retour Liste" />
            <input type="submit" value="Créer" />
        </fieldset>
    }
    @*vérification du type de données dans le front*@
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</body>
</html>