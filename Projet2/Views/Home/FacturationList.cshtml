@model List<Projet2.Models.Facturation>
@{
  Layout = "_Layout";
    ViewBag.Title = "EspaceFacture";
    }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des factures</title>
</head>
<center>
    <body>
        <h1>Liste des factures</h1>
        <table border="1" style="margin: 20px">
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse de Facturation</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Pays</th>
                <th>Telephone</th>
                <th>Club</th>
            </tr>
            <tbody>
                @foreach (var member in Model)

                {
                    <tr>
                        <td>@member.NomFacturation</td>
                        <td>@member.PrenomFacturation </td>
                        <td>@member.AdresseFacturation</td>
                        <td>@member.VilleFacturation</td>
                        <td>@member.CodePostalFacturation</td>
                        <td>@member.PaysFacturation</td>
                        <td>@member.TelephoneFacturation</td>
                        <td>@member.Club.InfosClub.NomClub</td>
                    </tr>
                }
            </tbody>
        </table>

        <form action="RemoveFacture" method="get">
            <div style="margin: 20px">
                <input type="text" name="id" placeholder="Id" size="10rem" />
                <button type="submit">Supprimer facture</button>
            </div>
        </form>

        <div>
            <input type="button" onclick="window.location.href='https://localhost:5001/Home/EspaceAdmin';" value="Retour Espace Admin" />
        </div>


        @{Html.BeginForm("CreatePDFDocument", "Home", FormMethod.Get);
            {
                <div>
                    <input type="submit" value="Exporter" style="width:300px;height:27px" />
                </div>
            }
            Html.EndForm();
        }
    </body>
</center>

</html>

