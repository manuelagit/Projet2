@model Projet2.Models.Club
@{
    Layout = "_Layout";
    ViewBag.Title = "EspaceClub";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site de votre club</title>
</head>

    <body>
        <center>
            <h1>Personnaliser le site de votre club</h1>


            <div class="container mt-5">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo">
                            <p><input type="file" accept="image/*" name="image" id="file" onchange="loadFile(event)" style="display: none;"></p>
                            <p><label for="file" style="cursor: pointer;">Ajoutez le logo \de votre club</label></p>
                            <p><img id="output" width="200" /></p>

                            <script>var loadFile = function (event) {
                                    var image = document.getElementById('output');
                                    image.src = URL.createObjectURL(event.target.files[0]);
                                };</script>
                        </div>
                    </div>
                    <div class="col-sm-1">
                    </div>
                    <div class="col-sm-7">


                    </div>
                </div>
            </div>


            <button type="submit" onclick="window.location.href='https://localhost:5001/Home/Activites';">Liste des activites</button>

        </center>
    </body>

</html>

